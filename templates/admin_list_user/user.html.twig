{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
<div class="container" mt-4>
    <h1>Liste des utilisateurs</h1>
    <table class="table table-striped">
        <thead>
            <th>ID</th>
            <th>Nom</th>
            <th>Rôles</th>
            <th>Actions</th>
        </thead>
        <tbody>
            {# On boucle sur les utilisateurs #}
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>
                        {# On boucle sur les rôles #}
                        {% for role in user.roles %}
                            {% if role == "ROLE_USER" %}
                                Utilisateur
                            {% else %}
                                Administrateur
                            {% endif %}
                        {% endfor %}
                    </td>
                    {# <td>{{ user.articles|length }}</td> #}
                    <td><a href="{{ path('admin_list_edit_user', {'id': user.id}) }}"  class="btn btn-primary">Modifier</a></td>
                </tr>
                
            {% else %}
                <p>Aucun utilisateur inscrit</p>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}