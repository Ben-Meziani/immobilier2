<div class="card mb-4" style="border-radius: 10%;">
  {% if property.picture %}
    <img src="{{ vich_uploader_asset(property.picture, 'imageFile')}}" alt="card-img-top" style="width: 100%; height:auto; border-radius: 10%;">
    {% else %}
      <img src="{{ '/images/empty.jpeg'}}" alt="card-img-top" style="width: 100%; height:auto; border-radius: 10%;">
  {% endif %}
  <div class="card-body">
    <h5 class="card-title">
      <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
        {{ property.title }}
      </a>
    </h5>
    <p class="card-text">{{ property.surface }} m² - {{ property.city }} ({{ property.postalCode }})</p>
    <div class="text-primary" style="font-size:2rem; font-weight: bold;">
      {{ property.formattedPrice }} €
    </div>
  </div>
</div>